<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    tools:context="com.example.NailedOwner.AllSalonPhoto.AllSalonPhoto">

    <ProgressBar
        android:layout_centerInParent="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/progressBar"
        android:background="@drawable/progresh_background"
        android:elevation="@dimen/padding6"
        android:padding="@dimen/padding5"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/green_new"
        android:visibility="gone"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/RR_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <RelativeLayout
                android:id="@+id/RR_back"
                android:layout_width="50dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@mipmap/back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    >
                </ImageView>

            </RelativeLayout>

            <TextView
                android:id="@+id/txt_tool"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Saloon Pic"
                android:textColor="@color/white"
                android:textSize="@dimen/pading18">
            </TextView>


        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_getSalon_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:visibility="gone" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:visibility="visible"
                android:layout_margin="@dimen/padding10"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="@dimen/pading12"
                    android:layout_margin="@dimen/pading10"
                    tools:ignore="MissingDefaultResource">

                    <ImageView
                        android:id="@+id/img_one"
                        android:src="@drawable/galllary_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitXY" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:layout_margin="@dimen/padding10"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="@dimen/pading12"
                    android:layout_margin="@dimen/pading10"
                    tools:ignore="MissingDefaultResource">

                    <ImageView
                        android:id="@+id/img_two"
                        android:src="@drawable/galllary_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitXY" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:layout_margin="@dimen/padding10"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="@dimen/pading12"
                    android:layout_margin="@dimen/pading10"
                    tools:ignore="MissingDefaultResource">

                    <ImageView
                        android:id="@+id/img_three"
                        android:src="@drawable/galllary_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitXY" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:layout_margin="@dimen/padding10"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="@dimen/pading12"
                    android:layout_margin="@dimen/pading10"
                    tools:ignore="MissingDefaultResource">

                    <ImageView
                        android:id="@+id/img_four"
                        android:src="@drawable/galllary_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitXY" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:layout_margin="@dimen/padding10"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="@dimen/pading12"
                    android:layout_margin="@dimen/pading10"
                    tools:ignore="MissingDefaultResource">

                    <ImageView
                        android:id="@+id/img_five"
                        android:src="@drawable/galllary_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitXY" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:layout_margin="@dimen/padding10"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="@dimen/pading12"
                    android:layout_margin="@dimen/pading10"
                    tools:ignore="MissingDefaultResource">

                    <ImageView
                        android:id="@+id/img_sex"
                        android:src="@drawable/galllary_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitXY" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:layout_margin="@dimen/padding10"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardCornerRadius="@dimen/pading12"
                    android:layout_margin="@dimen/pading10"
                    tools:ignore="MissingDefaultResource">

                    <ImageView
                        android:id="@+id/img_seven"
                        android:src="@drawable/galllary_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitXY" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>

        </androidx.core.widget.NestedScrollView>



    </LinearLayout>

</RelativeLayout>