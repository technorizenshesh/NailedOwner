<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.NailedOwner.Menu.MenuActivity"
    android:background="@drawable/splash_bg"
    >

    <RelativeLayout
        android:id="@+id/RR_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <RelativeLayout
            android:id="@+id/RR_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                >
            </ImageView>

        </RelativeLayout>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/pading18">
        </TextView>

        <LinearLayout
            android:layout_marginRight="@dimen/pading10"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="35dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@mipmap/search_white"
                    android:layout_width="@dimen/pading20"
                    android:layout_height="@dimen/pading20"
                    >
                </ImageView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="35dp"
                android:layout_height="match_parent">

                <ImageView
                    android:tint="@color/white"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/plus"
                    android:layout_width="@dimen/pading20"
                    android:layout_height="@dimen/pading20"
                    >
                </ImageView>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <Button
        android:layout_margin="@dimen/pading10"
        android:paddingRight="@dimen/pading10"
        android:paddingLeft="@dimen/pading10"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/btn_Login_add_menu"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_below="@+id/RR_toolbar"
        android:layout_gravity="center"
        android:text="All Services"
        android:background="@drawable/roundbttn_register"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/pading16" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/btn_Login_add_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_margin="@dimen/pading10"
            android:id="@+id/RR_camera"
            android:layout_below="@+id/RR_add"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            >

            <Switch
                android:checked="true"
                android:trackTint="@drawable/newtrack"
                android:layout_marginRight="@dimen/pading10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></Switch>


            <ImageView
                android:id="@+id/img_hair_cut"
                android:src="@mipmap/haircut"
                android:layout_width="80dp"
                android:layout_height="80dp"
                ></ImageView>

            <RelativeLayout
                android:layout_margin="@dimen/pading10"
                android:layout_toRightOf="@+id/img_hair_cut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/txt_photo"
                    android:layout_below="@+id/img_camera"
                    android:textColor="@color/white"
                    android:text="Pedicure"
                    android:textSize="@dimen/pading20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:layout_below="@+id/txt_photo"
                    android:textColor="@color/white"
                    android:text="$256"
                    android:textSize="@dimen/pading16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="@dimen/pading10"
            android:layout_below="@+id/RR_add"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            >

            <Switch
                android:checked="true"
                android:trackTint="@drawable/newtrack"
                android:layout_marginRight="@dimen/pading10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></Switch>


            <ImageView
                android:id="@+id/img_hair_cut"
                android:src="@mipmap/haircut"
                android:layout_width="80dp"
                android:layout_height="80dp"
                ></ImageView>

            <RelativeLayout
                android:layout_margin="@dimen/pading10"
                android:layout_toRightOf="@+id/img_hair_cut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/txt_photo"
                    android:layout_below="@+id/img_camera"
                    android:textColor="@color/white"
                    android:text="Pedicure"
                    android:textSize="@dimen/pading20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:layout_below="@+id/txt_photo"
                    android:textColor="@color/white"
                    android:text="$256"
                    android:textSize="@dimen/pading16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="@dimen/pading10"
            android:layout_below="@+id/RR_add"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            >

            <Switch
                android:checked="true"
                android:trackTint="@drawable/newtrack"
                android:layout_marginRight="@dimen/pading10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></Switch>


            <ImageView
                android:id="@+id/img_hair_cut"
                android:src="@mipmap/haircut"
                android:layout_width="80dp"
                android:layout_height="80dp"
                ></ImageView>

            <RelativeLayout
                android:layout_margin="@dimen/pading10"
                android:layout_toRightOf="@+id/img_hair_cut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/txt_photo"
                    android:layout_below="@+id/img_camera"
                    android:textColor="@color/white"
                    android:text="Pedicure"
                    android:textSize="@dimen/pading20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:layout_below="@+id/txt_photo"
                    android:textColor="@color/white"
                    android:text="$256"
                    android:textSize="@dimen/pading16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="@dimen/pading10"
            android:layout_below="@+id/RR_add"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            >

            <Switch
                android:checked="true"
                android:trackTint="@drawable/newtrack"
                android:layout_marginRight="@dimen/pading10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></Switch>


            <ImageView
                android:id="@+id/img_hair_cut"
                android:src="@mipmap/haircut"
                android:layout_width="80dp"
                android:layout_height="80dp"
                ></ImageView>

            <RelativeLayout
                android:layout_margin="@dimen/pading10"
                android:layout_toRightOf="@+id/img_hair_cut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:id="@+id/txt_photo"
                    android:layout_below="@+id/img_camera"
                    android:textColor="@color/white"
                    android:text="Pedicure"
                    android:textSize="@dimen/pading20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:layout_below="@+id/txt_photo"
                    android:textColor="@color/white"
                    android:text="$256"
                    android:textSize="@dimen/pading16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:weightSum="5"
        android:orientation="horizontal"
        android:id="@+id/RR_bottom"
        android:background="@drawable/ronded_top_corner"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <RelativeLayout
            android:id="@+id/RR_home"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/img_home"
                android:layout_centerHorizontal="true"
                android:src="@drawable/home"
                android:layout_marginLeft="10dp"
                android:layout_width="35dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/txt_Home"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:text="Home"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="-5dp"
            android:id="@+id/RR_offer"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/img_about"
                android:layout_centerHorizontal="true"
                android:src="@drawable/certifiacte"
                android:layout_width="35dp"
                android:layout_height="30dp"/>

            <TextView
                android:layout_marginLeft="-10dp"
                android:id="@+id/txt_about"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:text="Services"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:id="@+id/RR_PostAd"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/img_postad"
                android:layout_centerHorizontal="true"
                android:src="@drawable/dashboard"
                android:layout_width="35dp"
                android:layout_height="30dp"/>

            <TextView
                android:layout_marginTop="6dp"
                android:textColor="@color/black"
                android:id="@+id/txt_postadd"
                android:textSize="12dp"
                android:text="Dashboard"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_postad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="5dp"
            android:id="@+id/RR_PostAd"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/img_postad"
                android:layout_centerHorizontal="true"
                android:src="@drawable/user"
                android:layout_width="35dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_marginTop="6dp"
                android:textColor="@color/black"
                android:id="@+id/txt_postadd"
                android:textSize="12dp"
                android:text="Profile"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_postad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RR_more"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/img_more"
                android:layout_centerHorizontal="true"
                android:src="@drawable/dashboard"
                android:layout_width="35dp"
                android:layout_height="30dp" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/txt_more"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                android:text="More"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>