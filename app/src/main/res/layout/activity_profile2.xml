<?xml version='1.0' encoding='utf-8'?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    >

    <ProgressBar
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        android:background="@drawable/progresh_background"
        android:elevation="@dimen/padding6"
        android:padding="@dimen/padding5"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/colorPrimary"
        android:visibility="gone"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginBottom="@dimen/padding10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <LinearLayout
        android:layout_margin="@dimen/padding3"
        android:layout_below="@+id/RR_toolbar"
        android:padding="@dimen/padding20"
        android:id="@+id/ll_one"
        android:orientation="vertical"
        android:background="@color/rippleDarkRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/padding30"
            android:src="@drawable/logo"
            app:riv_corner_radius="@dimen/padding20" />

        <TextView
            android:id="@+id/txt_userName"
            android:layout_marginTop="@dimen/padding10"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/whiteSecond"
            android:textSize="@dimen/pading16"
            android:hint="Demo"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/whiteSecond"
            />

        <TextView
            android:id="@+id/txt_userEmail"
            android:layout_marginTop="@dimen/padding10"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/whiteSecond"
            android:textSize="@dimen/pading16"
            android:hint="Demo@gmail.com"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/whiteSecond"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginRight="@dimen/padding20"
        android:layout_marginLeft="@dimen/padding20"
        android:layout_below="@+id/ll_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/RR_ChangePassword"
            android:layout_marginTop="30dp"
            android:background="#1E1E1E"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:layout_marginLeft="@dimen/pading10"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textColor="@color/white"
                android:textSize="@dimen/pading16">

            </TextView>

            <ImageView
                android:tint="@color/light_black"
                android:src="@drawable/arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/pading20"
                android:layout_height="@dimen/pading20">

            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RR_privacy_policy"
            android:layout_marginTop="15dp"
            android:background="#1E1E1E"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:layout_marginLeft="@dimen/pading10"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textColor="@color/white"
                android:textSize="@dimen/pading16">

            </TextView>

            <ImageView
                android:tint="@color/light_black"
                android:src="@drawable/arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/pading20"
                android:layout_height="@dimen/pading20">

            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RR_terms_condition"
            android:layout_marginTop="15dp"
            android:background="#1E1E1E"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:layout_marginLeft="@dimen/pading10"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_condition"
                android:textColor="@color/white"
                android:textSize="@dimen/pading16">

            </TextView>

            <ImageView
                android:tint="@color/light_black"
                android:src="@drawable/arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/pading20"
                android:layout_height="@dimen/pading20">

            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/padding15"
            android:background="#1E1E1E"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <TextView
                android:layout_marginLeft="@dimen/pading10"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order History"
                android:textColor="@color/white"
                android:textSize="@dimen/pading16">

            </TextView>

            <ImageView
                android:tint="@color/light_black"
                android:src="@drawable/arrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/pading20"
                android:layout_height="@dimen/pading20">

            </ImageView>
        </RelativeLayout>

    </LinearLayout>

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>