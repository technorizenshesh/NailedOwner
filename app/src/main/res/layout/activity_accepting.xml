<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash_bg"
    tools:context="com.example.NailedOwner.HomeScree.HomeActivity">

    <RelativeLayout
        android:id="@+id/RR_add"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/RR_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                >
            </ImageView>

        </RelativeLayout>

        <TextView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/txt_add"
            android:textColor="@color/white"
            android:text="Home"
            android:textSize="@dimen/pading24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>


    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@+id/RR_add"
        android:id="@+id/LL_pending"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <Button
            android:id="@+id/btn_pending"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/RR_login"
            android:layout_gravity="center"
            android:text="Pending"
            android:background="@drawable/roundbttn_register"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/pading16" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/RR_login"
            android:layout_gravity="center"
            android:text="Cancelled"
            android:background="@drawable/roundbttn_white"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/pading16" />

        <Button
            android:id="@+id/btn_complete"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/RR_login"
            android:layout_gravity="center"
            android:text="Completed"
            android:background="@drawable/roundbttn_white"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/pading16" />

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/pading10"
        android:background="#1E1E1E"
        android:layout_below="@+id/LL_pending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/LL_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/user_profile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/pading10"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:src="@drawable/haircut_img"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>

            <LinearLayout
                android:padding="@dimen/pading10"
                android:orientation="vertical"
                android:layout_margin="@dimen/pading5"
                android:layout_toRightOf="@+id/user_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_gravity="right"
                    android:textColor="@color/white"
                    android:text="OTP 4274"
                    android:textStyle="bold"
                    android:textSize="@dimen/pading20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:textColor="@color/white"
                    android:text="Id:546141 4002"
                    android:textStyle="bold"
                    android:textSize="@dimen/pading20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:textColor="@color/white"
                    android:text="Nell's ist Time Book"
                    android:textStyle="bold"
                    android:textSize="@dimen/pading20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:layout_marginTop="@dimen/pading10"
                    android:textColor="@color/white"
                    android:text="1 X Hair cut"
                    android:textStyle="bold"
                    android:textSize="@dimen/pading16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/img_whats_up"
                    android:layout_marginLeft="@dimen/pading10"
                    android:layout_gravity="right"
                    android:layout_centerVertical="true"
                    android:src="@drawable/call"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"/>

                <TextView
                    android:layout_marginTop="-20dp"
                    android:textColor="@color/white"
                    android:text="2 X Bread timm"
                    android:textStyle="bold"
                    android:textSize="@dimen/pading16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:layout_marginTop="@dimen/pading10"
                    android:textColor="@color/white"
                    android:text="Total bill.$685 PAID"
                    android:textStyle="bold"
                    android:textSize="@dimen/pading16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>


            </LinearLayout>

        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>